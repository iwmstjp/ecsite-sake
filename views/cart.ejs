
    <main>
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% cartItems.forEach(item => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.price %></td>
                        <td><%= item.quantity %></td>
                    </tr>
                <% }); %>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total:</td>
                    <td>17600JPY</td>
                </tr>
            </tfoot>
        </table>
        <div class="cart-actions">
            <button disabled>Continue Shopping</button>
            <button>Proceed to Purchase</button>
        </div>
    </main>
</body>
</html>